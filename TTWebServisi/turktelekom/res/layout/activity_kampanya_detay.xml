<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".KampanyaDetayActivity" >

    <TextView
        android:id="@+id/editTextBaslik"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_marginRight="29dp"
        android:ems="10" >

        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/editTextIcerik"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextBaslik"
        android:layout_below="@+id/editTextBaslik"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editTextSikayet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextIcerik"
        android:layout_alignTop="@+id/TextView01"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/editTextTelefon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/butonSikayet"
        android:layout_alignLeft="@+id/editTextSikayet"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/butonSikayet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Gonder" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextTelefon"
        android:layout_alignLeft="@+id/editTextSikayet"
        android:layout_marginBottom="91dp"
        android:ems="10"
        android:text="Åžikayet Yaz" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextTelefon"
        android:layout_alignLeft="@+id/editTextTelefon"
        android:layout_alignRight="@+id/editTextBaslik"
        android:ems="10"
        android:text="Telefon" />

</RelativeLayout>
